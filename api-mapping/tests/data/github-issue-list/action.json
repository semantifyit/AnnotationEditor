{
  "requestMapping": {
    "method": "GET",
    "url": "https://api.github.com",
    "path": [
      "repos",
      "$.object.author.name",
      "$.object.name",
      "issues"
    ]
  },
  "responseMapping": {
    "headers": {
      "statusCode": "$.actionStatus |> (c => c === \"200\" ? \"http://schema.org/CompletedActionStatus\" : \"http://schema.org/FailedActionStatus\")"
    },
    "body": [
      {
        "$ite": "i",
        "url": "$.result[i].url",
        "id": "$.result[i].identifier",
        "number": "$.result[i].issueNumber",
        "title": "$.result[i].name",
        "user": {
          "login": "$.result[i].author.name |> ((i) => i.toUpperCase())",
          "id": "$.result[i].author.identifier",
          "avatar_url": "$.result[i].author.image",
          "url": "$.result[i].author.url"
        },
        "labels": [
          {
            "name": "$.result[i].genre"
          }
        ],
        "created_at": "$.result[i].dateCreated",
        "updated_at": "$.result[i].dateModified",
        "body": "$.result[i].description"
      }
    ]
  },
  "potentialAction": {
    "@context": "http://schema.org/",
    "@type": "DiscoverAction",
    "name": "List Issues in repository",
    "actionStatus": "http://schema.org/PotentialAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": "<to_be_replaced>",
      "httpMethod": "POST",
      "encodingType": "application/ld+json",
      "contentType": "application/ld+json"
    },
    "object": {
      "@type": "SoftwareSourceCode",
      "name-input": "required",
      "author": {
        "@type": "Person",
        "name-input": "required"
      }
    },
    "result": {
      "@type": "PublicationIssue",
      "issueNumber-output": "required",
      "identifier-output": "required",
      "url-output": "required",
      "name-output": "required",
      "description-output": "required",
      "dateCreated-output": "required",
      "dateModified-output": "required",
      "author": {
        "@type": "Person",
        "name-output": "required",
        "identifier-output": "required",
        "url-output": "required",
        "image-output": ""
      },
      "genre-output": ""
    }
  }
}